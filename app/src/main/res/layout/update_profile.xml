<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/banner_backgroundlt">

    //Profile img and name
    <RelativeLayout
        android:id="@+id/head_green"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/b3"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imgUserDetailsPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/user2" />

        <TextView
            android:id="@+id/tvUserDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgUserDetailsPhoto"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Kshitij Kumar"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserDetailsVoterID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserDetailsName"

            android:layout_alignStart="@+id/tvUserDetailsName"
            android:layout_alignEnd="@+id/tvUserDetailsName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="kshitijkr_2207"
            android:textSize="14sp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/green_wave"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/wave3" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp">

        //Full Name
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/full_name1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:background="@drawable/round_border2"
            app:boxBackgroundMode="none"
            android:layout_marginBottom="10dp"
            android:hint="Full Name ">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableStart="@drawable/person_green"
                android:drawablePadding="10dp"
                android:foregroundGravity="center"
                android:gravity="center_vertical"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        //Username
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username1"
            android:hint="username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:background="@drawable/round_border2"
            app:boxBackgroundMode="none"
            android:layout_marginBottom="10dp">
            <!--app:counterEnabled="true"-->

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableStart="@drawable/username_green"
                android:drawablePadding="10dp"
                android:foregroundGravity="center"
                android:gravity="center_vertical"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        //Email
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email1"
            android:hint="Email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:background="@drawable/round_border2"
            app:boxBackgroundMode="none"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableStart="@drawable/email_green"
                android:drawablePadding="10dp"
                android:foregroundGravity="center"
                android:gravity="center_vertical"
                android:inputType="textEmailAddress"/>

        </com.google.android.material.textfield.TextInputLayout>

        //Phone No
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone1"
            android:hint="Phone No"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:background="@drawable/round_border2"
            app:boxBackgroundMode="none"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableStart="@drawable/phone_green"
                android:drawablePadding="10dp"
                android:foregroundGravity="center"
                android:gravity="center_vertical"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        //Password
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password1"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:background="@drawable/round_border2"
            app:boxBackgroundMode="none"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableStart="@drawable/password_green"
                android:drawablePadding="10dp"
                android:foregroundGravity="center"
                android:gravity="center_vertical"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        // User Update Button
        <Button
            android:id="@+id/user_update_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/b3"
            android:text="UPDATE"
            android:textSize="18sp"
            android:textStyle="bold"/>


    </LinearLayout>


</LinearLayout>