<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCandidateItem"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/user1"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvCandidateItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Varun Tiwari"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"/>

        <TextView
            android:id="@+id/tvCandidateitemNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"/>

        <TextView
            android:id="@+id/tvCandidateItemDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dob" />

        <TextView
            android:id="@+id/tvCandidateItemPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7878787878787" />

        <TextView
            android:id="@+id/tvCandidateItemSymbolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbol Name" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>